<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page"
    android:background="@color/main_bg_color" >

    <LinearLayout style="@style/ll_vertical_match_match" >

        <RelativeLayout style="@style/topbar_bg_golden" >

            <ImageView
                android:id="@+id/iv_back"
                style="@style/topbar_return_img" />

            <TextView
                style="@style/topbar_title"
                android:layout_centerHorizontal="true"
                android:text="添加财盒" />

            <TextView
                style="@style/topbar_right_btn"
                android:text="GitHub"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout style="@style/ll_vertical_match_match" >

            <com.icaihe.widget.ClearEditText
                android:id="@+id/et_company_name"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="30dp"
                android:background="@drawable/edittext_bg"
                android:drawableRight="@drawable/delete_selector"
                android:hint="财盒网络科技"
                android:enabled="false"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/golden"
                android:textColorHint="@color/edit_text"
                android:textSize="18sp" />

            <RelativeLayout
                style="@style/ll_horizontal_match_wrap"
                android:layout_marginTop="20dip" >

                <com.icaihe.widget.ClearEditText
                    android:id="@+id/et_ichid"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dip"
                    android:background="@drawable/edittext_bg"
                    android:drawableRight="@drawable/delete_selector"
                    android:enabled="false"
                    android:hint="请扫码获取财盒ID"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/golden"
                    android:textColorHint="@color/edit_text"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/ib_scan_box"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/icon_scan_qrcode" />
            </RelativeLayout>

            <com.icaihe.widget.ClearEditText
                android:id="@+id/et_wifi_ssid"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:drawableRight="@drawable/delete_selector"
                android:hint="WIFI SSID"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/golden"
                android:textColorHint="@color/edit_text"
                android:textSize="18sp" />

            <com.icaihe.widget.ClearEditText
                android:id="@+id/et_wifi_pwd"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:drawableRight="@drawable/delete_selector"
                android:hint="WIFI密码"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/golden"
                android:textColorHint="@color/edit_text"
                android:textSize="18sp" />

            <com.icaihe.widget.ClearEditText
                android:id="@+id/et_box_name"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:drawableRight="@drawable/delete_selector"
                android:hint="财盒名称"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/golden"
                android:textColorHint="@color/edit_text"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt_add_box"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_get_code"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_bg"
                android:text="确认创建"
                android:textColor="@color/golden"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>