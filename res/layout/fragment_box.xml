<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page"
    android:background="@color/main_bg_color" >

    <ScrollView
        style="@style/ll_vertical_match_match"
        android:layout_weight="1" >

        <LinearLayout style="@style/ll_vertical_match_match" >

            <LinearLayout
                style="@style/ll_vertical_match_wrap"
                android:background="@drawable/my_head_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_box_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="dyson"
                    android:textColor="@color/golden"
                    android:textSize="22dp" />

                <ImageView
                    android:id="@+id/iv_icon_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/box_bg" />

                <TextView
                    android:id="@+id/tv_add_time"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:text="添加时间：2016-11-06 15:00"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px_golden" />

            <Button
                android:id="@+id/bt_open"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/ll_get_code"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_bg"
                android:text="打开财盒"
                android:textColor="@color/golden"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt_auth"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/ll_get_code"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_bg"
                android:text="授权开箱"
                android:textColor="@color/golden"
                android:textSize="18sp" />
            
            <Button
                android:id="@+id/bt_config"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/ll_get_code"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_bg"
                android:text="重新配置WIFI"
                android:textColor="@color/golden"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>