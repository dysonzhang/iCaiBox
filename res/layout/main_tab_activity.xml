<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page" >

    <RelativeLayout
        android:id="@+id/rlBottomTabTopbar"
        style="@style/topbar_bg" >

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="动态" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_head_info"
        style="@style/ll_horizontal_match_match"
        android:layout_height="120dp"
        android:background="@drawable/head_info_bg" >

        <LinearLayout
            android:id="@+id/ll_head_info_user"
            style="@style/ll_vertical_match_match"
            android:layout_width="120dp"
            android:layout_alignParentLeft="true"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_head_user"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/icon_head_user" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="dyson"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_head_info_opreation"
            style="@style/ll_vertical_wrap_match"
            android:layout_alignParentRight="true"
            android:gravity="center" >

            <Button
                android:id="@+id/bt_my_box"
                style="@style/btn_middle_golden"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="我的财盒"
                android:textSize="20dp" />

            <Button
                android:id="@+id/bt_check_in"
                style="@style/btn_middle_golden"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="打 卡"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        style="@style/ll_horizontal_match_match"
        android:layout_height="20dp"
        android:background="@color/tab_bg_color"
        android:gravity="left|center" >

        <TextView
            style="@style/text_small_golden"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="最新动态" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/flBottomTabFragmentContainer"
        style="@style/match_match"
        android:layout_weight="1"
        android:background="@color/white" >
    </FrameLayout>

    <View style="@style/divider_horizontal_1px_golden" />

    <LinearLayout
        style="@style/ll_horizontal_match_wrap"
        android:layout_height="60dp"
        android:background="@color/tab_bg_color" >

        <LinearLayout
            android:id="@+id/ll_tab_notice"
            style="@style/bottom_tab_ll"
            android:layout_weight="1" >

            <ImageView
                style="@style/bottom_tab_iv"
                android:src="@drawable/notice_selector" />

            <TextView
                style="@style/bottom_tab_tv"
                android:text="动态" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_box"
            style="@style/bottom_tab_ll"
            android:layout_weight="1" >

            <ImageView
                style="@style/bottom_tab_iv"
                android:src="@drawable/box_selector" />

            <TextView
                style="@style/bottom_tab_tv"
                android:text="财盒" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_contract"
            style="@style/bottom_tab_ll"
            android:layout_weight="1" >

            <ImageView
                style="@style/bottom_tab_iv"
                android:src="@drawable/contract_selector" />

            <TextView
                style="@style/bottom_tab_tv"
                android:text="通讯录" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_my"
            style="@style/bottom_tab_ll"
            android:layout_weight="1" >

            <ImageView
                style="@style/bottom_tab_iv"
                android:src="@drawable/my_selector" />

            <TextView
                style="@style/bottom_tab_tv"
                android:text="我的" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>